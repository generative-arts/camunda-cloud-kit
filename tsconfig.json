{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "rootDir": "src",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
